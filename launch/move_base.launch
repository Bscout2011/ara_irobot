<launch>
    <master auto="start"/>
    <!-- Run the map server -->
    <node name="map_server" pkg="map_server" type="map_server" args="$(find ara_irobot)/map/arf_lab.yaml"/>
    <!-- Run AMCL -->
    <include file="$(find ara_irobot)/launch/amcl_diff.launch"/>
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <rosparam file="$(find ara_irobot)/params/costmap_common_params.yaml"   command="load" ns="global_costmap" />
        <rosparam file="$(find ara_irobot)/params/costmap_common_params.yaml"   command="load" ns="local_costmap" />
        <rosparam file="$(find ara_irobot)/params/local_costmap_params.yaml"    command="load" />
        <rosparam file="$(find ara_irobot)/params/global_costmap_params.yaml"   command="load" />
        <rosparam file="$(find ara_irobot)/params/base_local_planner_params.yaml" command="load" />
    </node>
</launch>